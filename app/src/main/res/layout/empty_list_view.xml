<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/emptyFriendsListIcon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ic_empty_people_list"
        app:layout_constraintTop_toBottomOf="@id/friendsRecyclerView"/>

    <TextView
        android:id="@+id/emptyFriendsListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This place looks empty"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"/>

</merge>