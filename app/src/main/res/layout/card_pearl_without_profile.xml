<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/iv_pearl_without_profile_cocktail_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_pearl_without_profile_cocktail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Cocktail"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/iv_pearl_without_profile_cocktail_photo"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <RatingBar
            android:id="@+id/rb_pearl_without_profile_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_marginLeft="16dp"
            style="?android:attr/ratingBarStyleSmall"
            android:stepSize="1.0"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pearl_without_profile_cocktail_name"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pearl_without_profile_review"
            tools:text="Small description of this cocktail"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/rb_pearl_without_profile_rating"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
