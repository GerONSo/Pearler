<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pearler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.Pearler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Pearler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Pearler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Pearler.EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="Theme.Pearler.SearchEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/search_edit_text_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/search_edit_text_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/search_edit_text_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/search_edit_text_corner</item>
    </style>

    <style name="Theme.Pearler.CocktailTextView" parent="Theme.Pearler">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-thin</item>
    </style>

    <style name="Theme.Pearler.CocktailBigTextView" parent="Theme.Pearler.CocktailTextView">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Theme.Pearler.CocktailMediumTextView" parent="Theme.Pearler.CocktailTextView">
        <item name="android:textSize">18sp</item>
    </style>
</resources>